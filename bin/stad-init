# Default variables
DEFAULT_SIZE="1G"
DEFAULT_FSTYPE="ext4"

function get_stad_filename {
    # Takes the directory as an argument and returns a .stad filename

    # Make sure that there is a trailing '/'
    #dir=$(echo "$1" | sed "s/\/$//" | sed "s/$/\//")
    #filename=$(echo "$1" | sed "s/\/$//" | sed "s/$/\//" | grep -oP "/[^/]+/$" | sed "s/\///g")
    #dir=$(echo "$1" | sed "s/$filename$//")
    #echo "$dir$filename.stad"
    echo "$1.stad"
}

function create_empty_img {
    # Create a blank image $2 of $1 size
    unit="${1: -1}"
    if [ "$unit" == "M" ]; then
        factor="1"
    elif [ "$unit" == "G" ]; then
        factor="1000"
    elif [ "$unit" == "T" ]; then
        factor="1000000"
        # I hope nobody actually makes a stad this big
    fi
    count=${1%?}
    count=$(($count * $factor))
    echo $count

    dd if=/dev/zero of=$2 iflag=fullblock bs=1M count=$count
}

# Parse the arguments
POSITIONAL=()
while [[ $# -gt 0 ]]
do
key="$1"

case $key in
    -d|--directory)
    DIRECTORY="$2"
    shift
    shift
    ;;
    -s|--size)
    SIZE="$2"
    shift
    shift
    ;;
    -t|--fstype)
    FSTYPE="$2"
    shift
    shift
    ;;
    *)  # Unknown argument
    POSITIONAL+=("$1")
    shift
    ;;
esac
done

if [ -z $FSTYPE ]; then
    FSTYPE=$DEFAULT_FSTYPE
fi

if [ -z $SIZE ]; then
    SIZE=$DEFAULT_SIZE
fi

if [ -z $DIRECTORY ]; then
    (>&2 echo "No directory given.")
    exit 1
fi

echo $DIRECTORY
echo $(get_stad_filename $DIRECTORY)
echo $(create_img $SIZE)
